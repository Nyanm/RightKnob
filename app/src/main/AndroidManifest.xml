<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.nyanm.rightknob">

    <application
            android:allowBackup="true"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.RightKnob">

        <activity
                android:name=".MainActivity"
                android:exported="true"
                android:label="Right Knob">
            <intent-filter>
                <action android:name='android.intent.action.MAIN' />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".AboutActivity"
                android:label="Behind the code"
                android:exported="false">
            <intent-filter>
                <action android:name=".ACTION_ABOUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
                android:name=".UncannyActivity"
                android:label="Ali-pay is also recommended!"
                android:exported="false">
            <intent-filter>
                <action android:name=".ACTION_UNCANNY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>